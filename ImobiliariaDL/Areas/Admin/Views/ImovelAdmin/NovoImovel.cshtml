@model AddImovelVM

<h1 class="display-1 text-center">Adicionar novo imóvel</h1>

<form asp-controller="ImovelAdmin" asp-action="NovoImovel" method="post" role="form">
    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="Imovel.Nome">Descrição</label>
            <input asp-for="Imovel.Nome" type="text" class="form-control" placeholder="Descrição do imóvel">
            <span asp-validation-for="Imovel.Nome" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Imovel.Preco">Preço</label>
            <input asp-for="Imovel.Preco" type="text" class="form-control" placeholder="Preço do imóvel">
            <span asp-validation-for="Imovel.Preco" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Imovel.Quartos">Quartos</label>
            <input asp-for="Imovel.Quartos" type="number" class="form-control" placeholder="Quantidade de quartos">
            <span asp-validation-for="Imovel.Quartos" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Imovel.Banheiros">Banheiros</label>
            <input asp-for="Imovel.Banheiros" type="number" class="form-control" placeholder="Quantidade de banheiros">
            <span asp-validation-for="Imovel.Banheiros" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Imovel.Salas">Salas</label>
            <input asp-for="Imovel.Salas" type="number" class="form-control" placeholder="Quantidade de salas">
            <span asp-validation-for="Imovel.Salas" class="text-danger"></span>
        </div>
        <div class="form-group col-md-3">
            <label asp-for="Imovel.Garagens">Garagens</label>
            <input asp-for="Imovel.Garagens" type="number" class="form-control" placeholder="Quantidade de garagens">
            <span asp-validation-for="Imovel.Garagens" class="text-danger"></span>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Imovel.ECondominio" value="option1">
            <label class="form-check-label" for="inlineRadio1" asp-for="Imovel.ECondominio">Condominio</label>
        </div>
        <div class="form-check form-check-inline">
            <input class="form-check-input" type="checkbox" asp-for="Imovel.EApartamento" value="option2">
            <label class="form-check-label" for="inlineRadio1" asp-for="Imovel.EApartamento">Apartamento</label>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Imovel.NumeroDoApCd">Número apartamento/condominio</label>
            <input asp-for="Imovel.NumeroDoApCd" type="number" class="form-control" placeholder="Número do apartamento/condominio">
        </div>

        <h3 class="display-3 text-center">Endereço</h3>

        <hr />
        <div class="form-group col-md-6">
            <label asp-for="Imovel.Cidade">Cidade</label>
            <input asp-for="Imovel.Cidade" type="text" class="form-control" placeholder="Cidade">
            <span asp-validation-for="Imovel.Cidade" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Imovel.Bairro">Bairro</label>
            <input asp-for="Imovel.Bairro" type="text" class="form-control" placeholder="Bairro">
            <span asp-validation-for="Imovel.Bairro" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Imovel.Rua">Rua</label>
            <input asp-for="Imovel.Rua" type="text" class="form-control" placeholder="Rua">
            <span asp-validation-for="Imovel.Rua" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Imovel.Numero">Número</label>
            <input asp-for="Imovel.Numero" type="number" class="form-control" placeholder="Número do imóvel">
            <span asp-validation-for="Imovel.Numero" class="text-danger"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="Imovel.CEP">CEP</label>
            <input asp-for="Imovel.CEP" type="text" class="form-control" placeholder="CEP">
            <span asp-validation-for="Imovel.CEP" class="text-danger"></span>
        </div>

        <h3 class="display-3 text-center">Fotos</h3>

        <div class="custom-file col-md 12">
            <input asp-for="File" type="file" class="custom-file-input">
            <label class="custom-file-label" for="validatedCustomFile">Fotos</label>
            <div class="invalid-feedback">Example invalid custom file feedback</div>
        </div>
        <div clas="btn_salvar col-md-6">
            @*<button type="submit" class="btn btn-primary">Salvar</button>*@      
            <input class="btn btn-success" type="submit" value="Salvar" />
        </div>
    </div>
</form>